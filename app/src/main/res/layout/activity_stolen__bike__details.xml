<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bike__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maciek.myapplication.Stolen_Bike_Details">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:id="@+id/bike_name"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <TextView
        android:text="Make: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bike_name"
        android:layout_alignStart="@+id/bike_name"
        android:layout_marginTop="14dp"
        android:id="@+id/bike_make" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bike_make"
        android:layout_alignStart="@+id/bike_make"
        android:layout_marginTop="12dp"
        android:id="@+id/bike_model" />

    <TextView
        android:text="Frame Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bike_model"
        android:layout_alignStart="@+id/bike_model"
        android:layout_marginTop="16dp"
        android:id="@+id/bike_frame" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:id="@+id/imageView2"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Description: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/description"
        android:layout_below="@+id/stolen_bike_type"
        android:layout_alignStart="@+id/stolen_bike_type" />

    <TextView
        android:text="Bike type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stolen_bike_type"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/bike_frame"
        android:layout_alignStart="@+id/bike_frame" />

    <TextView
        android:text="Theft Location: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_description"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/description" />

</RelativeLayout>
